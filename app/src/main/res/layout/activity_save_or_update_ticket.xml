<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.ActionBar"
        app:navigationIcon="@mipmap/left_arrows_white"
        app:title="报活"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:text="报活地点："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_ticket_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:minEms="10"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:text="责任工位："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/et_work_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:minEms="10"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:text="提报人："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/et_create_ticket_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="10"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ems="5"
                    android:text="报活内容："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/et_ticket_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:minEms="10"
                    android:minLines="2"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ems="5"
                    android:text="备注："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:minEms="10"
                    android:minLines="2"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:ems="5"
                    android:gravity="center_vertical"
                    android:text="作业方式："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/et_work_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:minEms="10"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_man_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:ems="5"
                    android:gravity="center_vertical"
                    android:text="作业者："
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_work_man_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    />

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="3dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_table_grid"
                    android:stretchColumns="0,1,2">

                    <TableRow>

                        <TextView
                            android:id="@+id/tv_title_work_leader"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_table_grid"
                            android:gravity="center"
                            android:text="工长"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:id="@+id/tv_title_quality_check"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_table_grid"
                            android:gravity="center"
                            android:text="质检"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:id="@+id/tv_title_check_and_accept"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_table_grid"
                            android:gravity="center"
                            android:text="验收"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_16"/>
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_table_grid"
                            android:minHeight="45dp">

                            <TextView
                                android:id="@+id/tv_cell_work_leader"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_16"/>

                            <RadioGroup
                                android:id="@+id/rg_work_leader_check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_work_leader_check_ok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="合格"/>

                                <RadioButton
                                    android:id="@+id/rb_work_leader_check_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="不合格"/>
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_table_grid">

                            <TextView
                                android:id="@+id/tv_cell_quality_check"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_table_grid"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_16"/>

                            <RadioGroup
                                android:id="@+id/rg_quality_check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_quality_check_ok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="合格"/>

                                <RadioButton
                                    android:id="@+id/rb_quality_check_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="不合格"/>
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_table_grid">

                            <TextView
                                android:id="@+id/tv_cell_check_and_accept"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_table_grid"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_16"/>

                            <RadioGroup
                                android:id="@+id/rg_check_and_accept"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_check_and_accept_ok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="合格"/>

                                <RadioButton
                                    android:id="@+id/rb_check_and_accept_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="不合格"/>
                            </RadioGroup>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btn_pre_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_checked"
            android:padding="5dp"
            android:text="上一条"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_save_or_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_checked"
            android:padding="5dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_next_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_checked"
            android:padding="5dp"
            android:text="下一条"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>